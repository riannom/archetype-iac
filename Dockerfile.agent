FROM python:3.11-slim
WORKDIR /app

# System deps for docker CLI and containerlab
RUN apt-get update && apt-get install -y --no-install-recommends \
  curl \
  bash \
  docker.io \
  iproute2 \
  && rm -rf /var/lib/apt/lists/*

# containerlab for container orchestration
RUN curl -sL https://get.containerlab.dev | bash -s -- --no-sudo

# Python deps
COPY agent/requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

# Agent code
COPY agent/ ./agent/

ENV PYTHONUNBUFFERED=1
ENV PYTHONPATH=/app

CMD ["python", "-m", "agent.main"]
