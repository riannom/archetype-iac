FROM python:3.11-slim
WORKDIR /app

# System deps for networking, OVS, and libvirt
RUN apt-get update && apt-get install -y --no-install-recommends \
  curl \
  bash \
  ca-certificates \
  gnupg \
  iproute2 \
  iputils-ping \
  openvswitch-switch \
  # Libvirt for VM-based devices (IOSv, CSR1000v, etc.)
  libvirt-clients \
  libvirt-dev \
  pkg-config \
  qemu-utils \
  gcc \
  libc-dev \
  && rm -rf /var/lib/apt/lists/*

# Install Docker CLI from official repo
RUN install -m 0755 -d /etc/apt/keyrings \
  && curl -fsSL https://download.docker.com/linux/debian/gpg | gpg --dearmor -o /etc/apt/keyrings/docker.gpg \
  && chmod a+r /etc/apt/keyrings/docker.gpg \
  && echo "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.gpg] https://download.docker.com/linux/debian bookworm stable" > /etc/apt/sources.list.d/docker.list \
  && apt-get update \
  && apt-get install -y --no-install-recommends docker-ce-cli \
  && rm -rf /var/lib/apt/lists/*

# Python deps (install libvirt-python separately since it needs API XML files)
COPY agent/requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir libvirt-python

# Agent code
COPY agent/ ./agent/

# Commit SHA (optional build arg)
ARG GIT_SHA=unknown
ENV ARCHETYPE_GIT_SHA=$GIT_SHA
RUN echo "$GIT_SHA" > /app/agent/GIT_SHA

ENV PYTHONUNBUFFERED=1
ENV PYTHONPATH=/app

CMD ["python", "-m", "agent.main"]
